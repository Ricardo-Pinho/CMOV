            android:name="com.feup.passenger.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="Login" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="Register" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="MainMenu" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="BuyTickets" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="PurchaseHistory" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="AvailableTickets" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="TicketHistory" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="Validate" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="ValidateOffline" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="OfflineMenu" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="OfflineTicketHistory" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="OfflineAvailableTickets" >
        </activity>
        <activity 
            android:label="@string/app_name" 
            android:name="AddTicketsOffline" >
        </activity>
    </application>

</manifest>
